var mutationObserver = setMutationObserver(document.querySelector('.sample-table'));

function setMutationObserver(target){
    var config = { // configuration of the observer
            attributes: true,
            childList: true,
            characterData: true,
            subtree: true,
            attributeOldValue: true
        },
        observer = new MutationObserver(function (mutations) {
            mutations.forEach(function (mutation) {
                // to do something with the mutations (group them, filter them...)
            });

            // TODO: update the way to show the information
            console.table(mutations);
        });

    observer.observe(target, config);

    return observer;
}

